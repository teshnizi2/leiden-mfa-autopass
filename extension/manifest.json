{
  "manifest_version": 3,
  "name": "Leiden MFA Auto-Pass",
  "version": "2.0.3",
  "description": "Fully automated Leiden MFA authentication using TOTP codes - no user interaction required",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mfa.services.universiteitleiden.nl/*",
    "https://*.universiteitleiden.nl/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mfa.services.universiteitleiden.nl/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
